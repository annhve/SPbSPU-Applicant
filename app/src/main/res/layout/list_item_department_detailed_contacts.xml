<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultCardListItem">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/department_details_contacts_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/department_content_contacts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/CardTitle"
                />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/department_details_contacts_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="12dp"
                tools:text="9-й учебный корпус, ул. Политехническая, дом 21, Санкт-Петербург, 194021"
                android:theme="@style/AboutCardActionsButton"
                android:gravity="center_vertical"
                app:icon="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="@+id/department_details_contacts_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_details_contacts_title"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/department_details_contacts_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                tools:text="office@icc.spbstu.ru"
                android:theme="@style/AboutCardActionsButton"
                android:gravity="center_vertical"
                app:icon="@drawable/ic_email"
                app:layout_constraintStart_toStartOf="@+id/department_details_contacts_map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_details_contacts_map"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/department_details_contacts_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="+7 (812) 297-16-28"
                android:theme="@style/AboutCardActionsButton"
                android:gravity="center_vertical"
                app:icon="@drawable/ic_call"
                app:layout_constraintStart_toStartOf="@+id/department_details_contacts_email"
                app:layout_constraintTop_toBottomOf="@+id/department_details_contacts_email"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

        <!--<com.google.android.material.button.MaterialButton
