                />-->

        <com.google.android.material.button.MaterialButton
                android:id="@+id/department_details_contacts_url"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:letterSpacing=".01"
                android:text="@string/card_action_url"
                android:textAllCaps="false"
                app:icon="@drawable/ic_planet"
                app:iconGravity="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/department_details_contacts_phone"
                app:layout_constraintTop_toBottomOf="@id/department_details_contacts_phone"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

